@model IEnumerable<eStore.Domain.Entity.Product>

<div class="row">
	<div class="col-xxl-12">
		<div class="card mb-4">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h5 class="card-title mb-0"> Product List  </h5>
				<div class="header-actions">
					<a asp-action="Create" asp-controller="Product" class="btn btn-danger"> <i class="bi bi-plus-circle-fill m-1"></i> Add New Product</a>

				</div>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table id="mainTableFormate" class="table table-sm  table-bordered table-striped table-hover table-responsive  align-middle">
						<thead>
							<tr>
								<th>Name</th>
								<th>ShortDescription </th>
								<th>LongDescription</th>
								<th>Price</th>
								<th>Brand</th>
								<th>Stock</th>
								<th>Product image</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var product in Model)
							{
								<tr>
									<td class="text-truncate" style="max-width: 100px;">@product.Name</td>
									<td class="text-truncate" style="max-width: 100px;">@product.ShortDescription</td>
									<td class="text-truncate" style="max-width: 100px;">
										@product.LongDescription
									</td>

									<td>@product.Price</td>
									<td>@product.Brand</td>
									<td>@product.Stock</td>
									<td><img src="@product.ImageURL" height="50" width="50" /></td>
									<td class="align-items-center">
										<a class="btn btn-primary btn-sm " asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">
											<i class="bi bi-pencil-square"></i>
										</a>
										<a class="btn btn-danger btn-sm" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
											<i class="bi bi-trash"></i>
										</a>
									</td>


								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
