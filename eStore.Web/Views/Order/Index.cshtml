@using eStore.Infrastructure.Data
@model Order
@if (Model.PublicId == string.Empty)
{

    <div class="container pt-4 mt-0 mt-lg-4">
        <div class="row" style="border: 1px solid #aaa;">

            <div class="col-12 col-lg-7 p-4 2 mt-4 mt-md-0">
                <div class="row p-1 my-1 " style="border-radius:20px; ">
                    <div class="col-6">
                        <h3 class="text-success">Product Details</h3>
                    </div>
                    <div class="text-end col-6 ">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-outline-danger" style="width:200px;">
                            <i class="bi bi-arrow-left-square"></i> &nbsp; Modify Selection
                        </a>
                    </div>
                    <hr />
                    <partial name="_ProductCard" model="@Model.OrderDetails.Product" />
                    <hr />

                </div>
            </div>
            <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0" style="border-left:1px solid #aaa">
                <form method="post" asp-action="Index">
                    <input hidden asp-for="ProductId" />
                    <div class="row pt-1 mb-3 " style="border-radius:20px; ">
                        <div class="col-12">
                            <h3 class="text-success">Enter Ordering Details</h3>
                        </div>
                    </div>

                    <div class="form-group pt-0">
                        <label class="text-warning">Name</label>
                        <input asp-for="@Model.OrderDetails.ApplicationUser.Name" class="form-control" />
                        <span></span>
                    </div>
                    <div class="form-group pt-2">
                        <label class="text-warning">Phone</label>
                        <input asp-for="@Model.OrderDetails.ApplicationUser.PhoneNumber" class="form-control" />
                        <span></span>

                    </div>
                    <div class="form-group pt-2">
                        <label class="text-warning">Email</label>
                        <input asp-for="@Model.OrderDetails.ApplicationUser.Email" class="form-control" />
                        <span></span>

                    </div>

                    @*         <div class="form-group pt-2 pt-md-4">

                        <input type="submit" class="btn btn-success form-control" value="Order" />


                </div> *@
                    <div class="form-group pt-2 pt-md-4">
                        <button type="submit" class="btn btn-success form-control">
                            <i class="bi bi-bag-check"></i>   Order
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    @section Scripts {

        <partial name="_ValidationScriptsPartial" />
}
}
else if (Model.PublicId != string.Empty)
{
    <div class="container text-center mt-5">
        <div class="alert alert-success" role="alert">
            <img src="https://module-presta.com/media/catalog/product/cache/1/image/400x/9df78eab33525d08d6e5fb8d27136e95/a/d/advanced_order_confirmation_page_prestashop_icon_template.png" class="img-fluid mb-3" alt="Order Confirmed" style="width: 30% !important;">
            <h2 class="mb-3">🎉 Your Order is Placed! 🎉</h2>
            <p>Thank you for shopping with us. Your order has been successfully placed.</p>
            <hr>
            <p class="mb-0">We'll notify you when your order is shipped.</p>
        </div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to Homepage</a>
    </div>

}