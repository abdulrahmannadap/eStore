
@model string
@{
    ViewData["Title"] = "Order Cancelled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="alert alert-warning shadow-sm p-4 rounded-4">
        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828665.png"
             alt="Cancelled"
             class="img-fluid mb-3"
             style="max-width: 60px;">

        <h2 class="mb-2">😔 Payment Cancelled</h2>
        <p class="lead">It looks like you cancelled the payment process.</p>      
        <h6 class="text-muted fw-semibold">Order ID: @ViewBag.PublicId</h6>

        <hr class="my-3" />

        <p class="text-muted">If this was a mistake, feel free to try again.</p>
    </div>

    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Return to Shop
    </a>
</div>

