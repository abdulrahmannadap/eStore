

@model string
@{
    ViewData["Title"] = "Order Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="alert alert-success shadow-sm p-4 rounded-4" role="alert">
        <img src="https://cdn-icons-png.flaticon.com/512/845/845646.png"
             alt="Success"
             class="img-fluid mb-3"
             style="max-width: 60px;">

        <h2 class="mb-2">🎉 Order Confirmed!</h2>
        <p class="lead">Thank you for your purchase. Your order ID is:</p>
        <h6 class="text-primary fw-semibold">@ViewBag.PublicId</h6>

        <hr class="my-3" />

        <p class="text-muted">We’ll notify you once your item is shipped.</p>
    </div>

    <a asp-action="Index" asp-controller="Home" class="btn btn-success mt-3">
        <i class="bi bi-house-door"></i> Back to Home
    </a>
</div>

